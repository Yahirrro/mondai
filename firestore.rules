rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /quiz/{quizId} {
    	allow read: if resource.data.currentStatus != 'creating'
      	|| resource.data.permission.owner in request.auth.uid == true;
      allow write: if request.auth != null;
      allow update: if resource.data.permission.keys().toSet().hasAll([request.auth.uid]) == true
          && (resource.data.permission.owner in request.auth.uid == true
              || resource.data.permission.answer in request.auth.uid == true );
          && request.resource.id == resource.id;
      allow delete: if resource.data.permission.keys().toSet().hasAll([request.auth.uid]) == true
      	&& resource.data.permission.owner in request.auth.uid == true;
      
      function isOwner(userId) {
        return get(/databases/$(database)/documents/quiz/$(quizId)).data.permission.owner in userId
      }
      function isAnswer(userId) {
        return get(/databases/$(database)/documents/quiz/$(quizId)).data.permission.owner in userId
      }

      match /question/{questionId} {
      	allow read;
        allow write: if isOwner(request.auth.uid);
        allow update:
        	if isOwner(request.auth.uid)
          	&& request.resource.id == resource.id;
        allow delete: 
        	if isOwner(request.auth.uid);
      }
      match /message/{messageId} {
      	allow read;
        allow write: if isOwner(request.auth.uid);
        allow update:
        	if isOwner(request.auth.uid)
          	&& request.resource.id == resource.id;
        allow delete: 
        	if isOwner(request.auth.uid);
      }
      match /user/{userId} {
      	allow read;
        allow write: if request.auth != null
        	&& request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
      match /answer/{answerId} {
      	allow read;
        allow write: if request.auth != null
        	&& request.resource.data.userId == request.auth.uid;
        allow update, delete: if false;
      }
    }
    match /user/{userId} {
    	allow read: if request.auth != null;
      allow write, update: if request.auth != null
      	&& request.resource.data.userId == request.auth.uid
        && request.resource.id == request.auth.uid;
      allow delete: if false;
    }
  }
}